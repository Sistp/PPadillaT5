<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PPadillaT5.Vistas.Eliminar"
             Title="Eliminar">
    <VerticalStackLayout Padding="25" Spacing="25">
        <Label 
            Text="Eliminar Persona"
            TextColor="Red"
            FontSize="20"
            HorizontalTextAlignment="Center"
        />
        <Entry x:Name="PersonId"
               Placeholder="Ingrese ID de la Persona a Eliminar"
        />
        <Button x:Name="btnEliminar" Text="Eliminar" TextColor="Black" Clicked="btnEliminar_Clicked"></Button>
        <Label x:Name="lblEliminarMensaje"></Label>
    </VerticalStackLayout>
</ContentPage>